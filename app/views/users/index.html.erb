<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      
      <%= render 'users/info', books: @books %>
      
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |users| %>
              <tr>
                <td>
                  <%= link_to user_path do %>
                    <%= attachment_image_tag @users, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image2.jpg" %>
                    <br><%= @users.name %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
    </div>
  </div>
</main>