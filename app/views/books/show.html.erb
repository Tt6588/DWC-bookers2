<main>
  <div class="container">
    <div class="row">

      <%= render 'books/info', book: @book, user: @user %>

　　　<div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
          <tbody>
              <td>
                  <%= link_to books_path do %>
                    <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image2.jpg" %>
                    <br><%= @book.user.name %>
                  <% end %>
                </td>
              <td>
                <%= link_to book_path(@book.id) do %>
                  <%= @book.title %>
                <% end %>
              </td>
              <td><%= @book.body %></td>
              <td><%= link_to "Edit", edit_book_path, class:"btn btn-sm btn-success" %></td>
              <td>destroy</td>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
