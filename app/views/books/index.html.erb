<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      
      <%= render 'books/info', books: @books %>
      
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image2.jpg" %>
                  <br><%= @user.name %>
                </td>
                <td><%= link_tobook_path, title: book.title %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
    </div>
  </div>
</main>